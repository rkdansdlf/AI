## KBO AI Service Configuration

# LLM Provider (대화용)
LLM_PROVIDER=openrouter
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=openai/gpt-4o-mini
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_APP_TITLE=KBO Chatbot

# Coach LLM Provider (코치 분석용)
COACH_LLM_PROVIDER=openrouter
COACH_MAX_OUTPUT_TOKENS=600
COACH_LLM_READ_TIMEOUT=10

# Embedding Provider (임베딩용 - OpenAI 직접 사용)
EMBED_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_EMBED_MODEL=text-embedding-3-small

# Alternative: Gemini for both LLM and Embeddings
# LLM_PROVIDER=gemini
# GEMINI_API_KEY=your_gemini_api_key
# GEMINI_MODEL=gemini-1.5-flash
# EMBED_PROVIDER=gemini
# GEMINI_EMBED_MODEL=text-embedding-004

# Database Configuration
SUPABASE_DB_URL=postgresql://user:password@host:port/database

# Firebase Configuration (Vector Search)
FIREBASE_SERVICE_ACCOUNT_KEY=/path/to/firebase-service-account-key.json
FIREBASE_PROJECT_ID=your-project-id
FIRESTORE_DATABASE_ID=begachatbot
USE_FIRESTORE_SEARCH=true  # true: Firestore, false: Supabase pgvector

# Other Settings
DEFAULT_SEARCH_LIMIT=6
MAX_OUTPUT_TOKENS=1024
